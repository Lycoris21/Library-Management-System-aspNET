<!-- Views/Account/Login.cshtml -->
@model LibraryManagementSystemASP.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<html>
<head>
    <title>Login Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        body {
            background-color: #6DADD0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            justify-self: center;
            background-color: #B6CEE5;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 600px;
        }

            .login-container h1 {
                font-family: 'Times New Roman', Times, serif;
                font-size: 48px;
                color: #333;
                margin-bottom: 30px;
            }

            .login-container .form-control {
                margin-bottom: 20px;
                height: 40px;
            }

            .login-container .btn-primary {
                background-color: #2A5D8F;
                border: none;
                width: 100%;
                padding: 10px;
                font-size: 18px;
            }

            .login-container .register-link {
                margin-top: 20px;
                display: block;
                color: #2A5D8F;
                font-style: italic;
                justify-self: baseline;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <h1>HIRAYA</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled"></div>
        <form asp-action="Login" method="post">
            <div class="mb-3 text-start">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="Username" required>
            </div>
            <div class="mb-3 text-start">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <a href="/Account/Register" class="register-link">Don't have an account? Register</a>
    </div>
</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}